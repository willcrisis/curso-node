<html>
<body>
<div class="erros">
    <%if (errosValidacao) {%>
    <ul>
    <% for (var i  = 0; i < errosValidacao.length; i++) {%>
    <li>
        <%= errosValidacao[i].param%>: <%= errosValidacao[i].msg%>
    </li>
    <% }%>
    </ul>
    <%}%>
</div>
<form action="/produtos" method="POST">
    <div>
        <label for="titulo">Título</label>
        <input type="text" name="titulo" value="<%= produto.titulo%>" placeholder="Título">
    </div>
    <div>
        <label for="descricao">Descrição</label>
        <textarea name="descricao" placeholder="Descrição" rows="5"><%= produto.descricao%></textarea>
    </div>
    <div>
        <label for="valor">Preço</label>
        <input type="text" name="valor" value="<%= produto.valor%>" placeholder="32.90">
    </div>
    <div>
        <button type="submit">Salvar</button>
    </div>
</form>
</body>
</html>